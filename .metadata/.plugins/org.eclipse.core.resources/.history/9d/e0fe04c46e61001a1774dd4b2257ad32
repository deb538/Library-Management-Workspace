spring:
  application:
    name: books-service
  cloud:
    config:
      profile: production
      label : latest
      name : books-service
      fail-fast: false
      discovery:
        enabled: true
        service-id: books-server
      retry:
        initialInterval: 2000
        multiplier: 1.5
        maxInterval: 60000
        maxAttempts: 10

server:
  port: 5001
eureka:
  client:
    serviceUrl:
      defaultZone: http://localhost:5000/eureka/
  instance:
    preferIpAddress: true
    homePageUrl: ${eureka.hostname}
    instanceId: ${spring.application.name}:5001